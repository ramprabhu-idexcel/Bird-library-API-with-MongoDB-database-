<p id="notice"><%= notice %></p>

<h1>Listing Birds</h1>

<table>
  <thead>
    <tr>
      <th>Schema</th>
      <th>Title</th>
      <th>Description</th>
      <th>Type</th>
      <th>Required</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birds.each do |bird| %>
      <tr>
        <td><%= bird.schema %></td>
        <td><%= bird.title %></td>
        <td><%= bird.description %></td>
        <td><%= bird.type %></td>
        <td><%= bird.required %></td>
        <td><%= link_to 'Show', bird %></td>
        <td><%= link_to 'Edit', edit_bird_path(bird) %></td>
        <td><%= link_to 'Destroy', bird, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

